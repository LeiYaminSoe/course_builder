<div class="wrapper wrapper-content animated fadeInRight">
  <div class="row">
    <div class="container col-md-12 cus-margin">
      <div class="card">
        <div class="card-header cus-font">
          Chapter Detail
        </div>
        <div class="card-body">
          <div class="row">
            <div class="col-md-2">
              <%= link_to 'New Content', {:controller => "contents", :action => "new", :chapter_id => @chapter.id }, class: "form-control cus-form-font btn btn-warning" %>
            </div>
          </div>
          </br>
          <div class="row">
            <div class="col-md-12">
              <div id="chapter_detail">
                <%= render 'detail' %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  </br>
  <div class="row">
    <div class="container col-md-12 cus-margin">
      <div class="card">
        <div class="card-header cus-font">
          Contents
        </div>
        <div class="card-body">
          <div class="row">
            <div class="col-md-12">
              <% if @chapter.contents.present? %>
                <div id="content_list_form">
                  <%= render partial:"contents/list", locals:{contents:@chapter.contents} %>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>