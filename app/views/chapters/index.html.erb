<div class="wrapper wrapper-content animated fadeInRight">
  <div class="row">
    <div class="container col-md-12 cus-margin">
      <div class="card">
        <div class="card-header cus-font">
          Chapters
        </div>
        <div class="card-body">          
          <div class="row">
            <div class="col-md-2">
              <%= link_to 'New Chapter', new_chapter_path, class: "form-control cus-form-font btn btn-warning" %>
            </div>
          </div>
          </br>
          <div class="row">
            <div class="col-md-12">
              <% if @chapters.present? %>
                <div id="chapter_list_form">
                  <%= render 'list' %>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
</br>