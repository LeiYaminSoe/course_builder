<div class="album py-5 bg-light">
  <div class="container">
    <div class="row">
      <% @courses.each do |course| %>
        <div class="col-md-4">
          <div class="card border-secondary mb-3">
            <div class="card-body text-secondary">
              <p class="card-text">Name: <%= course.name %></p>
              <p class="card-text">Subtitle: <%= course.subtitle %></p>
              <p class="card-text">Description: <%= course.description %></p>
              <p class="card-text">Price: <%= number_to_currency(course.price, :unit => "$", precision: 2) %></p>
              <p class="card-text">Duration: <%= number_with_precision(course.duration, precision: 2) %></p>
              <div class="d-flex justify-content-between align-items-center">
                <div class="btn-group">
                  <%= link_to 'View More', course, :class => "btn btn-sm btn-outline-warning cus-btn" %>
                  <%= link_to 'Edit', edit_course_path(course), :class => "btn btn-sm btn-outline-warning cus-btn" %>
                  <%= link_to 'Delete', course_path(course), method: :delete, data: {confirm: "Are you sure you want to delete?"}, :class => "btn btn-sm btn-outline-warning cus-btn" %>
                </div>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
</div>