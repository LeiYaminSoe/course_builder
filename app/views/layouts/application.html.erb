<!DOCTYPE html>
<html>
  <head>
    <title>CourseBuilder</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    <%= favicon_link_tag asset_path('course_favicon.png') %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag 'custom' %>
    
  </head>

  <body>
    <!-- Wrapper-->
    <div id="wrapper" class="<%= params[:controller] %>.<%= params[:action] %>">

      <!-- Page wraper -->
      <div id="page-wrapper" class="gray-bg <%= @extra_class %>">

        <!-- Header -->
        <%= render 'layouts/header' %>
        <!-- End Header -->

        <!-- Main view  -->
        <div id="body-content" class="content">
          <%=yield %>
        </div>
        <!-- End Main view  -->

        <!-- Footer -->
        <%= render 'layouts/footer' %>
        <!-- End Footer -->

      </div>
      <!-- End page wrapper-->

    </div>
    <!-- End wrapper-->
  </body>
</html>
