<div class="row">
  <div class="container col-md-12 cus-margin">
    <div class="card">
      <div class="card-header cus-font">        
        <% if @content.id.present? %>
          Editing Content
        <% else %>
          New Content
        <% end %>
      </div>
      <div class="card-body">
        <%= simple_form_for @content do |f| %>
          <% if @content.errors.any? %>
            <div id="error_explanation">
              <ul>
                <% @content.errors.full_messages.each do |message| %>
                  <li class="font-error"><%= message %></li>
                <% end %>
              </ul>
            </div>
          <% end %>
          <div cliass="col-md-12">
            <div class="form-group">
              <label class="col-md-2 control-label">Title:</label>
              <div class="col-md-10 mb-3">
                <%= f.text_field :title, class: "form-control cus-form-font" %>
              </div>
            </div>
            <% if @content.id.present? %>                          
              <div class="form-group">
                <label class="col-md-2 control-label">Chapter:</label>
                <div class="col-md-10 mb-3">
                  <%= f.collection_select(:chapter_id, Chapter.all, :id, :title, {prompt: ""}, {class: "form-control cus-form-font"}) %>
                </div>
              </div>
            <% else %>
              <%= f.hidden_field :chapter_id, :value => @chapter.id %>
            <% end %>
            <div class="form-group">
              <label class="col-md-2 control-label">Choose Content Type:</label>
              <div class="col-md-10 mb-3">
                <%= select_tag 'content_type', options_for_select([["A little bit of everything","1"], ["HTML Text","2"], ["Audio","3"], ["Video","4"], ["pdf","5"]]), class: "form-control cus-form-font", :onchange => 'change_content()' %>
              </div>
            </div>
            <div id="content-summernote">
              <div class="form-group">
                <label class="col-md-2 control-label">Content:</label>
                <div class="col-md-10 mb-3">
                  <%= f.input :content, as: :summernote, label: false %>
                </div>
              </div>
            </div>
            <div id="content-html">
              <div class="form-group">
                <label class="col-md-2 control-label">Content:</label>
                <div class="col-md-10 mb-3">
                  <%= f.text_area :content, class: "form-control cus-form-font", cols: "30", rows: "10" %>
                </div>
              </div>
            </div>
            <div id="content-audio">
              <div class="form-group">
                <label class="col-md-2 control-label">Content:</label>
                <div class="col-md-10 mb-3">
                  <%= f.file_field :content_files, multiple: false, class: "form-control cus-form-font cus-form-height" %>
                </div>
              </div>
            </div>
            <div id="content-video">
              <div class="form-group">
                <label class="col-md-2 control-label">Content:</label>
                <div class="col-md-10 mb-3">
                  <%= f.file_field :content_files, multiple: false, class: "form-control cus-form-font cus-form-height" %>
                </div>
              </div>
            </div>
            <div id="content-pdf">
              <div class="form-group">
                <label class="col-md-2 control-label">Content:</label>
                <div class="col-md-10 mb-3">
                  <%= f.file_field :content_files, multiple: false, class: "form-control cus-form-font cus-form-height" %>
                </div>
              </div>
            </div>
            <div class="form-group">
              <div class="col-md-2 pull-right">
                  <%= f.submit "Save", class: "form-control cus-form-font btn btn-warning" %>
                </div>
                <div class="col-md-2 pull-right">
                  <%= link_to 'Back', chapters_path, class: "form-control cus-form-font btn btn-warning" %>
                </div>
            </div>
          </div>
          <script>
            $('#content_content').summernote({
      // unfortunately you can only rewrite
      // all the toolbar contents, on the bright side
      // you can place uploadcare button wherever you want
      toolbar: [
        ['style', ['style']],
        ['font', ['bold', 'italic', 'underline', 'clear']],
        ['fontname', ['fontname']],
        ['color', ['color']],
        ['para', ['ul', 'ol', 'paragraph']],
        ['height', ['height']],
        ['table', ['table']],
        ['insert', ['media', 'link', 'hr', 'audio', 'file', 'video', 'picture']],
        ['view', ['fullscreen', 'codeview']],
        ['help', ['help']]
        
      ]
    });
          </script>
        <% end %>
      </div>
    </div>
  </div>
</div>